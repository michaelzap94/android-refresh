<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/whatsappRelLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhatsappClone"
    >

    <ImageView
        android:id="@+id/whatsappImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/whatsapp" />

    <EditText
        android:id="@+id/whatsappUsernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whatsappImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/whatsappPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whatsappUsernameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/whatsappSignUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whatsappPasswordEditText"
        android:layout_alignStart="@+id/whatsappImageView"
        android:layout_marginTop="38dp"
        android:onClick="signUpOrLogIn"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/whatsappLoginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/whatsappSignUpButton"
        android:layout_alignBottom="@+id/whatsappSignUpButton"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/whatsappSignUpButton"
        android:text="or, Login"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp" />
</RelativeLayout>