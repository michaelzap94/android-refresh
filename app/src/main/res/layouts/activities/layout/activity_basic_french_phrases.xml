<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicFrenchPhrases">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutFrench"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:rowCount="4">

        <Button
            android:id="@+id/speakEnglish"
            android:layout_width="0dp"
            android:onClick="playFrench"
            android:tag="speakEnglish"
            android:text="DO YOU SPEAK ENGLISH?"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/goodEvening"
            android:layout_width="0dp"
            android:onClick="playFrench"
            android:tag="goodEvening"
            android:text="GOOD EVENING"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/hello"
            android:layout_width="0dp"
            android:onClick="playFrench"
            android:tag="hello"
            android:text="HELLO"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/howAreYou"
            android:layout_width="0dp"
            android:onClick="playFrench"
            android:tag="howAreYou"
            android:text="HOW ARE YOU?"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/liveIn"
            android:layout_width="0dp"
            android:onClick="playFrench"
            android:tag="liveIn"
            android:text="I LIVE IN"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/nameIs"
            android:layout_width="0dp"
            android:onClick="playFrench"
            android:tag="nameIs"
            android:text="MY NAME IS"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/please"
            android:layout_width="0dp"
            android:onClick="playFrench"
            android:tag="please"
            android:text="PLEASE"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/welcome"
            android:layout_width="0dp"
            android:onClick="playFrench"
            android:tag="welcome"
            android:text="WELCOME"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>